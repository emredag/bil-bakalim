{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for Kelime Oyunu - Restricted to app data directory only for security",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "fs:allow-app-meta",
    "fs:allow-app-meta-recursive",
    "dialog:default",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "opener:default"
  ]
}
